{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["airbnb", "prettier"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["react"],
	"settings": {
		"import/resolver": {
			"alias": {
				"map": [["@", "path.resolve(__dirname, 'src')"]]
			}
		}
	},
	"rules": {
		"import/no-extraneous-dependencies": [
			"error",
			{
				"devDependencies": true
			}
		]
	}
}
