{
	"env": {
		"browser": true,
		"es2021": true,
		"jest": true
	},
	"extends": [
		"airbnb",
		"prettier",
		"plugin:cypress/recommended"
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": [
		"react"
	],
	"settings": {
		"import/resolver": {
			"alias": {
				"map": [
					[
						"@",
						"path.resolve(__dirname, 'src')"
					]
				]
			}
		}
	},
	"rules": {
		"import/no-extraneous-dependencies": [
			"error",
			{
				"devDependencies": true
			}
		],
		"cypress/unsafe-to-chain-command": "off"
	}
}